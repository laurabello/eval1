@model evaluation1.Models.Hotel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name à @Model.City.Name </h1>

<div class="container">
    @if (!string.IsNullOrEmpty(Model.PicUrl))
    {
        <div class="col-7">
            <img src="@Model.PicUrl" />
        </div>
    }
    <div class="col-5">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Adress1)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Adress1)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Adress2)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Adress2)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Stars)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stars)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rooms)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rooms)
            </dd>
        </dl>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.HotelId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
